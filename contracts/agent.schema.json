{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AgentDescriptor",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(?:-[0-9A-Za-z.-]+)?$"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "description": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "name",
    "version",
    "skills"
  ],
  "additionalProperties": true
}
