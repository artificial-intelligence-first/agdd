{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agdd.ai/schemas/skills/example-web-search/input.schema.json",
  "title": "WebSearchQueryInput",
  "description": "Input for web search skill",
  "type": "object",
  "required": ["url"],
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to fetch"
    },
    "extract_text": {
      "type": "boolean",
      "description": "Whether to extract text content from HTML",
      "default": true
    }
  },
  "additionalProperties": false
}
