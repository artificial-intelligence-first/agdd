{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://magsag.ai/schemas/skill.schema.json",
  "title": "MAGSAG Skill Schema",
  "description": "Schema for MAGSAG skill definitions",
  "type": "object",
  "required": ["version", "id", "name", "entrypoint"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the skill definition"
    },
    "id": {
      "type": "string",
      "pattern": "^skill\\.[a-z][a-z0-9-]*[a-z0-9]$",
      "description": "Unique identifier for the skill (must start with 'skill.')"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the skill (PascalCase)"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the skill's functionality"
    },
    "entrypoint": {
      "type": "string",
      "pattern": "^catalog/skills/[^/]+/impl/[^:]+\\.py:[a-zA-Z_][a-zA-Z0-9_]*$",
      "description": "Python entrypoint in format: path/to/file.py:function_name"
    },
    "contracts": {
      "type": "object",
      "description": "Input and output contract schemas",
      "properties": {
        "input_schema": {
          "type": "string",
          "description": "Path to input JSON schema"
        },
        "output_schema": {
          "type": "string",
          "description": "Path to output JSON schema"
        }
      },
      "additionalProperties": false
    },
    "permissions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of required MCP permissions (e.g., 'mcp:pg-readonly')"
    },
    "resource_config": {
      "type": "object",
      "description": "Resource and cost configuration",
      "properties": {
        "estimated_duration": {
          "type": "string",
          "enum": ["short", "medium", "long"],
          "description": "Estimated execution duration"
        },
        "timeout_ms": {
          "type": "integer",
          "minimum": 0,
          "description": "Execution timeout in milliseconds"
        },
        "cost_category": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "description": "Cost category for the skill"
        }
      },
      "additionalProperties": false
    },
    "observability": {
      "type": "object",
      "description": "Observability settings",
      "properties": {
        "logs": {
          "type": "boolean",
          "description": "Enable logging"
        },
        "metrics": {
          "type": "boolean",
          "description": "Enable metrics collection"
        },
        "traces": {
          "type": "string",
          "enum": ["none", "basic", "detailed"],
          "description": "Tracing level"
        }
      },
      "additionalProperties": false
    },
    "deprecated": {
      "type": "boolean",
      "description": "Whether this skill definition is deprecated",
      "default": false
    },
    "deprecated_message": {
      "type": "string",
      "description": "Deprecation message with migration guidance"
    }
  },
  "additionalProperties": false
}
