{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SalaryBand",
  "description": "Salary band recommendation for a given role",
  "type": "object",
  "properties": {
    "recommended_band": {
      "type": "string",
      "description": "Recommended salary band for the position"
    },
    "min": {
      "type": "number",
      "description": "Minimum salary in the band",
      "minimum": 0
    },
    "max": {
      "type": "number",
      "description": "Maximum salary in the band",
      "minimum": 0
    },
    "currency": {
      "type": "string",
      "description": "Currency code (e.g., USD, EUR)"
    },
    "source": {
      "type": "string",
      "description": "Data source for the salary band"
    }
  },
  "required": ["recommended_band"]
}
