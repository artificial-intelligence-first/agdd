{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://magsag.ai/schemas/offer_packet.schema.json",
  "title": "OfferPacket",
  "description": "Complete offer packet generated by OfferOrchestratorMAG",
  "type": "object",
  "required": ["offer"],
  "properties": {
    "offer": {
      "type": "object",
      "required": ["role", "base_salary", "band"],
      "properties": {
        "role": {
          "type": "string"
        },
        "base_salary": {
          "type": "object",
          "required": ["currency", "amount"],
          "properties": {
            "currency": {
              "type": "string"
            },
            "amount": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "band": {
          "type": "object",
          "required": ["currency", "min", "max"],
          "properties": {
            "currency": {
              "type": "string"
            },
            "min": {
              "type": "number",
              "minimum": 0
            },
            "max": {
              "type": "number",
              "minimum": 0
            },
            "source": {
              "type": "string"
            }
          }
        },
        "sign_on_bonus": {
          "type": "object",
          "properties": {
            "currency": {
              "type": "string"
            },
            "amount": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "equity": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "amount": {
              "type": "number",
              "minimum": 0
            },
            "vesting_years": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "generated_by": {
          "type": "string",
          "description": "Agent that generated this offer"
        },
        "run_id": {
          "type": "string",
          "description": "Execution run identifier"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Generation timestamp"
        },
        "version": {
          "type": "string",
          "description": "Schema/generator version"
        }
      }
    }
  },
  "additionalProperties": true
}