{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to fetch"
    },
    "extract_text": {
      "type": "boolean",
      "description": "Whether to extract text content from HTML",
      "default": true
    }
  },
  "required": ["url"]
}
