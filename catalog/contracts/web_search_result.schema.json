{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WebSearchResult",
  "description": "Output schema for web search results",
  "type": "object",
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL that was fetched"
    },
    "success": {
      "type": "boolean",
      "description": "Whether the fetch was successful"
    },
    "title": {
      "type": "string",
      "description": "Page title"
    },
    "content": {
      "type": "string",
      "description": "Page content (text or HTML)"
    },
    "error": {
      "type": "string",
      "description": "Error message if fetch failed"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "status_code": {
          "type": "integer",
          "description": "HTTP status code"
        },
        "content_type": {
          "type": "string",
          "description": "Content-Type header value"
        },
        "extracted_text": {
          "type": "boolean",
          "description": "Whether text was extracted from HTML"
        }
      },
      "required": ["status_code", "content_type"]
    }
  },
  "required": ["url", "success"]
}
