# Example configuration for AGDD HTTP API and GitHub integration
# Copy this file to `.env` and customize values as needed.

# Core API settings
AGDD_API_DEBUG=false
AGDD_API_PREFIX=/api/v1
AGDD_API_HOST=0.0.0.0
AGDD_API_PORT=8000

# Authentication (set a strong random value in production)
AGDD_API_KEY=

# CORS configuration (JSON array of allowed origins)
AGDD_CORS_ORIGINS=["http://localhost:3000"]
AGDD_CORS_ALLOW_CREDENTIALS=false

# Run artifacts directory
AGDD_RUNS_BASE_DIR=.runs/agents

# Rate limiting (set to an integer QPS value to enable)
AGDD_RATE_LIMIT_QPS=10
# Redis is optional; required only for multi-process deployments
AGDD_REDIS_URL=redis://localhost:6379/0

# GitHub integration
AGDD_GITHUB_WEBHOOK_SECRET=
AGDD_GITHUB_TOKEN=
