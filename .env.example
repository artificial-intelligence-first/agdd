# AGDD HTTP API configuration
# Copy to .env and customize for your deployment.

# Core server configuration
AGDD_API_HOST=0.0.0.0
AGDD_API_PORT=8000
AGDD_API_PREFIX=/api/v1
AGDD_API_DEBUG=false

# Authentication
# Set to a random string to enforce bearer/x-api-key authentication.
# Leave empty for local development.
AGDD_API_KEY=

# Cross-origin resource sharing (CORS)
# Provide a JSON array of allowed origins, e.g. ["http://localhost:3000"].
AGDD_CORS_ORIGINS=["*"]
AGDD_CORS_ALLOW_CREDENTIALS=false

# Observability
AGDD_RUNS_BASE_DIR=.runs/agents

# Rate limiting
# Set AGDD_RATE_LIMIT_QPS to enable the token bucket limiter.
# Configure AGDD_REDIS_URL for multi-process deployments.
AGDD_RATE_LIMIT_QPS=
AGDD_REDIS_URL=

# GitHub integration
AGDD_GITHUB_WEBHOOK_SECRET=
AGDD_GITHUB_TOKEN=

# Optional: override with additional environment variables for downstream integrations.
